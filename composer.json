{
  "name": "xwp/isolate-composer",
  "description": "Isolates composer dependencies by prefixing namespace for all vendor code within a project",
  "license": "MIT",
  "minimum-stability": "alpha",
  "type": "composer-plugin",
  "require": {
    "composer-plugin-api": "^1.1",
    "nikic/php-parser": "^3.1"
  },
  "require-dev": {
    "php": "^5.6|^7.0",
    "composer/composer": "^1.0",
    "friendsofphp/php-cs-fixer": "^2.19",
    "phpunit/phpunit": "^5.7|^7.5"
  },
  "autoload":{
    "psr-4":{
      "Ox6d617474\\Isolate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4":{
      "Ox6d617474\\IsolateTest\\": "tests/phpunit/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "5.6.20"
    }
  },
  "extra": {
    "class": "Ox6d617474\\Isolate\\Plugin"
  },
  "scripts": {
    "lint-php": "php-cs-fixer fix --dry-run --verbose",
    "lint-php-fix": "php-cs-fixer fix",
    "lint-composer": "@composer validate",
    "test": "phpunit"
  }
}
